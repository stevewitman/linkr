<div class="well linkr-links-container">

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content modal-body" >
        <div class="modal-header">
          <button type="button" class="close linkr-add-close" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
          <h2 class="modal-title linkr-modal-title">Add Link</h2>
        </div>
        <div class="modal-body">
          <%= form_for @link do |f| %>
            <% if @link.errors.any? %>
              <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <br>
            <div class="text-center">
              <div class="form-group">
                <%= f.text_field :name, class: 'form-control field-placeholder linkr-input linkr-input-link', placeholder: "link name" %>
              </div>
              <div class="form-group">
                <%= f.text_field :url, class: 'form-control field-placeholder linkr-input linkr-input-link', placeholder: "link url"  %>
              </div>
              <div class="form-group">
                <%= f.text_field :labels, class: 'form-control field-placeholder linkr-input linkr-input-link', placeholder: "lables (e.g., News, To do, summer vacation)"  %>
              </div>
              <div class="form-group">
                <%= f.text_area :notes, class: 'form-control field-placeholder linkr-input linkr-input-link', placeholder: "notes"  %>
              </div>
              <br>
              <div class="buttons">
                <button type="button" class="btn btn-lg btn-default linkr-btn" data-dismiss="modal">Cancel</button>
                <%= f.submit "Add Link", class: 'btn btn-lg btn-default linkr-btn' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <!-- Sort by
      <ul>
        <li>Name</li>
        <li>Site</li>
        <li>lables</li>
        <li>Date added</li>
      </ul>
      Labels
      <ul>
        <li>News</li>
        <li>HTML</li>
        <li>Rails</li>
        <li>Projects</li>
      </ul> -->


    </div>
    <div class="col-sm-10">
      <% @links.each do |link| %>
        <div class="row linkr-link-row">
          <div class="col-xs-4">
            <%= link_to "", link_path(link), :id => "delete_#{link.id}", method: :delete,
              data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-remove linkr-remove-link" %>
            <%= link_to links_path do %>
              <span class="glyphicon glyphicon-edit linkr-edit-link" aria-hidden="true"></span>
            <% end %>
            <%= link_to link.name, link.url, target: "_blank", class: "linkr-link" %>
            <span class="text-muted"><%= URI.parse(link.url).host %></span>
          </div>
          <div class="col-xs-4">
            <% if  link.attributes['labels'] %>
              [<%= link.labels %>]
            <% end %>
          </div>
          <div class="col-xs-4 ellipsis">
            <%= link.notes %>
          </div>
        </div>
      <% end %>
    </div>

  </div>


  <!--  http://stackoverflow.com/questions/18689846/edit-record-in-bootstrap-modal -->

</div>

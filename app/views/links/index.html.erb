<h1>Links</h1>

<%= form_for @link do |f| %>
  <% if @link.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="links text-center">
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control field-placeholder', placeholder: "Link Title" %>
    </div>
    <div class="form-group">
      <%= f.text_field :url, class: 'form-control field-placeholder', placeholder: "Link URL"  %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, class: 'form-control field-placeholder', placeholder: "Notes"  %>
    </div>
    <br>
    <div class="buttons">
      <%= f.submit "Add Link", class: 'btn btn-lg btn-default button-bold' %>
    </div>
  </div>
<% end %>

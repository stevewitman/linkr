<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
    <div class="jumbotron">
      <h1 class="text-center"><span class="linkr-logo-lg"><span class="glyphicon glyphicon-link"></span> </span><span class="linkr-txt-lg">Linkr.me</span></h1>
      <p class="text-center lead ">a personal link manager</p>
      <p class="text-center">
        <% if current_user %>
          <%= link_to "Sign Out", signout_path, class: "btn btn-lg btn-default linkr-btn linkr-btn-marketing" %>
        <% else %>
          <%= link_to "Sign In", signin_path, class: "btn btn-lg btn-default linkr-btn linkr-btn-marketing" %>
          <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-default linkr-btn linkr-btn-marketing" %>
        <% end %>
      </p>
    </div>
  </div>
</div>

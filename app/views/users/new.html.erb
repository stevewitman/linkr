<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
      <div class="jumbotron">
        <h1 class="text-center"><span class="lm-logo-lg"><span class="glyphicon glyphicon-link"></span> </span><span class="lm-txt-lg">Linkr.me</span></h1>
        <%= form_tag sessions_path do  %>
          <br>
          <div class="login text-center">
            <div class="form-group">
              <%= f.text_field :email, class: 'form-control input-auth', placeholder: "email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control input-auth', placeholder: "password"  %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control input-auth', placeholder: "password confirmation"  %>
            </div>
            <br>
            <div class="form-group">
              <%= submit_tag "Sign Up", :class => 'btn btn-lg btn-default btn-marketing' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

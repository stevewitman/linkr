<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="login text-center">
    <div class="form-group">
      <%= f.text_field :email, :class => 'form-control field-placeholder', :placeholder => "email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :class => 'form-control field-placeholder', :placeholder => "password"  %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, :class => 'form-control field-placeholder', :placeholder => "password confirmation"  %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit "Sign Up", :class => 'btn btn-lg btn-default' %>
    </div>
  </div>
<% end %>
